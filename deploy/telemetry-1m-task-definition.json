{
  "family": "ops-pipeline-telemetry-1m",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::160027201036:role/ops-pipeline-ecs-task-role",
  "taskRoleArn": "arn:aws:iam::160027201036:role/ops-pipeline-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "telemetry-1m",
      "image": "160027201036.dkr.ecr.us-west-2.amazonaws.com/ops-pipeline/telemetry-1m:latest",
      "essential": true,
      "environment": [
        {"name": "AWS_REGION", "value": "us-west-2"},
        {"name": "LOOKBACK_MINUTES", "value": "120"},
        {"name": "INTERVAL", "value": "1m"},
        {"name": "DATA_SOURCE", "value": "alpaca"},
        {"name": "SSM_ALPACA_KEY_ID", "value": "/ops-pipeline/alpaca_key_id"},
        {"name": "SSM_ALPACA_SECRET", "value": "/ops-pipeline/alpaca_secret_key"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ops-pipeline/telemetry-1m",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "telemetry",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
