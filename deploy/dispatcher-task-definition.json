{
  "family": "ops-pipeline-dispatcher",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::160027201036:role/ops-pipeline-ecs-task-role",
  "taskRoleArn": "arn:aws:iam::160027201036:role/ops-pipeline-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "dispatcher",
      "image": "160027201036.dkr.ecr.us-west-2.amazonaws.com/ops-pipeline/dispatcher:sql-transaction-fix-v4",
      "essential": true,
      "environment": [
        {"name": "AWS_REGION", "value": "us-west-2"},
        {"name": "EXECUTION_MODE", "value": "ALPACA_PAPER"},
        {"name": "ACCOUNT_TIER", "value": "large"},
        {"name": "RUN_MODE", "value": "LOOP"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ops-pipeline/dispatcher",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "dispatcher",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
